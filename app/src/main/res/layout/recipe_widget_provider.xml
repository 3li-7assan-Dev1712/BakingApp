<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previous_description_image_widget"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:contentDescription="@string/see_next_des_widget"
        android:layout_gravity="center_vertical"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/appwidget_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/appwidget_text"
            tools:text="@string/appwidget_text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
    </ScrollView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_description_image_widget"
        android:src="@drawable/ic_baseline_chevron_right_24"
        android:contentDescription="@string/see_next_des_widget"
        android:layout_gravity="center_vertical"/>
</LinearLayout>